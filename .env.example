# Web Crawler Configuration

# Seed URLs (comma-separated)
SEED_URLS=https://example.com,https://example.org

# Domain restrictions (comma-separated, leave empty for no restrictions)
ALLOWED_DOMAINS=example.com,example.org

# Crawl limits
MAX_DEPTH=3
MAX_PAGES=100

# Rate limiting (seconds)
REQUEST_DELAY=1.0
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Content filtering
MAX_CONTENT_SIZE=10485760

# Storage paths
DATABASE_PATH=./crawler.db
VAULT_DIR=./obsidian_vault

# Ollama/LLM settings
OLLAMA_BASE_URL=http://10.0.228.180:31134
LLM_MODEL=llama3.1:8b
LLM_TEMPERATURE=0.3
LLM_TIMEOUT=60
LLM_MAX_RETRIES=2

# Obsidian settings
USE_WIKI_LINKS=true
TAG_PREFIX=crawled

# User agent
USER_AGENT=Mozilla/5.0 (compatible; AI-Crawler/1.0; +https://example.com/bot)
